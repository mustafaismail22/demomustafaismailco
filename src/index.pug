- var scripts = (assets && assets.scripts) || (htmlWebpackPlugin && htmlWebpackPlugin.files.js) || []
- var styles = (assets && assets.styles) || (htmlWebpackPlugin && htmlWebpackPlugin.files.css) || []
- var favicon = (assets && assets.favicon) || ( typeof require === 'function' && require('./assets/favicon.ico')) || ''
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="shortcut icon", href=favicon)    
    each href in styles
      link(rel="stylesheet", href=href)
    link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Open+Sans")
    | !{ (helmet && helmet.title.toString()) || '<title>Mustafa ismail</title>' }
  body.no-js
    #root
      | !{ output || '<span class="loading">Loading...</span>' }
    each src in scripts
      script(src=src)
